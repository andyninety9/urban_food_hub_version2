<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>Authorization</filter-name>
        <filter-class>controller.filter.AuthorizationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>HomeFilter</filter-name>
        <filter-class>controller.filter.HomeFilter</filter-class>
    </filter>
    <filter>
        <filter-name>RoleFilter</filter-name>
        <filter-class>controller.filter.RoleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>HomeFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Authorization</filter-name>
        <url-pattern>/dashboard</url-pattern>
        <url-pattern>/logout</url-pattern>
        <url-pattern>/change-password</url-pattern>
        <url-pattern>/update-account</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>RoleFilter</filter-name>
        <url-pattern>/dashboard</url-pattern>
        <url-pattern>/manage-products</url-pattern>
        <url-pattern>/add-new-material</url-pattern>
        <url-pattern>/update-material</url-pattern>
    </filter-mapping>


    <servlet>
        <servlet-name>HomepageServlet</servlet-name>
        <servlet-class>controller.homepage.HomepageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.authen.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.authen.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <servlet-class>controller.authen.ChangePasswordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateAccountServlet</servlet-name>
        <servlet-class>controller.authen.UpdateAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.authen.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccessDeniedServlet</servlet-name>
        <servlet-class>controller.error.AccessDeniedServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>controller.dashboard.DashboardServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageProductsServlet</servlet-name>
        <servlet-class>controller.admin.products.ManageProductsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNewMaterialServlet</servlet-name>
        <servlet-class>controller.admin.products.AddNewMaterialServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HideMaterialServlet</servlet-name>
        <servlet-class>controller.admin.products.HideMaterialServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateMaterialServlet</servlet-name>
        <servlet-class>controller.admin.products.UpdateMaterialServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomepageServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePasswordServlet</servlet-name>
        <url-pattern>/change-password</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateAccountServlet</servlet-name>
        <url-pattern>/update-account</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccessDeniedServlet</servlet-name>
        <url-pattern>/access-denied</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageProductsServlet</servlet-name>
        <url-pattern>/manage-products</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNewMaterialServlet</servlet-name>
        <url-pattern>/add-new-material</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HideMaterialServlet</servlet-name>
        <url-pattern>/hide-material</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateMaterialServlet</servlet-name>
        <url-pattern>/update-material</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>homepage.jsp</welcome-file>
    </welcome-file-list>
</web-app>
